{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ES2020",
      "moduleResolution": "Node",
  
      "lib": ["es2020", "dom", "dom.iterable"],
  
      "strict": true,
      "skipLibCheck": true,
  
      // prevent pulling in node_modules/@types/* implicitly
      "types": [],
      "typeRoots": [],
  
      // nice-to-haves
      "forceConsistentCasingInFileNames": true
    },
    "include": ["output/**/*.d.ts"],
    "exclude": ["node_modules", "dist", "docs"]
  }
  